/* -- Work */

.work { display: block; position: relative; margin-bottom: 30px;
  .description { position: absolute; bottom: 10px; z-index: 2; left: 10px;
    h4 { font-size: 18px; font-weight: bold; margin-bottom: 2px; margin-top: 0; background-color: #fff; padding: 2px; display: inline-block; }
    h5 { font-size: 14px; margin-bottom: 0; margin-top: 0; background-color: #fff; padding: 2px; }
  }
  .image { position: relative; height: 220px; z-index: 1; }
}